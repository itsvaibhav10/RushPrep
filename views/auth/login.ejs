<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs')%>
            <main>
                <section id="login-form" class="container">
                    <h3 class="text-center display-2">Login Here</h3>
                    <div class="divider"></div>
                    <div class="text-center">
                        <% if (errorMessage) { %>
                            <div class="alert alert-danger">
                                <%= errorMessage %>
                            </div>
                            <% } %>
                    </div>
                    <form class="login-form" action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">E-Mail</label>
                            <input type="email" name="email" id="email" value="<%= oldInput.email %>">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="" type="password" name="password" id="password"
                                value="<%= oldInput.password %>">
                        </div>
                        <div class="form-group-inline">
                            <input class="form-check-input" type="checkbox" onclick="togglePass()" value=""
                                id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1"> Show Password </label>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="divider"></div>
                        <div class="text-center">
                            <button class="btn btn-success" type="submit">Login <i
                                    class="fas fa-sign-in-alt fa-lg"></i></button>
                        </div>
                    </form>

                    <div class="d-grid text-center mt-2">
                        <a href="/reset" class="">Reset Password ?</a>
                        <%if(activationToken){%>
                            <a href="/EmailResend/<%=activationToken%>" class="">Didn't Recieve Email ?</a>
                            <%}%>
                    </div>
                    <div class="divider"></div>
                </section>
            </main>
            <script src="/frontend/js/utility.js"></script>
            <%- include('../includes/footer.ejs') %>